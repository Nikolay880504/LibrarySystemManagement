<!DOCTYPE html>
@model LibrarySystemManagement.Models.Book
@{
    ViewData["Title"] = "AddBook";
}
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    @if (Model != null && Model.ID > 0)
    {
        <h2 style="text-align: right;">Update the book</h2>
    }

    else
    {
        <h2 style="text-align: right;">Add a new book</h2>
    }

    <div style="text-align: right;">


        <form asp-controller="Books" asp-action="@((Model != null && Model.ID > 0) ? "UpdateBook" : "AddBook")"method="post">
            <style>
                .validation-error {
                    color: red;
                }
            </style>

            <div style="margin-bottom: 10px;">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <br />
                <span asp-validation-for="Title" class="validation-error"></span>
            </div>
            <div style="margin-bottom: 10px;">
                <label asp-for="Author"></label>
                <input asp-for="Author" />
                <br />
                <span asp-validation-for="Author" class="validation-error"></span>
            </div>
            <div style="margin-bottom: 10px;">
                <label asp-for="Year"></label>
                <input asp-for="Year" />
                <br />
                <span asp-validation-for="Year" class="validation-error"></span>
            </div>
            <div style="margin-bottom: 10px;">
                <label asp-for="Category"></label>
                <input asp-for="Category" />
                <br />
                <span asp-validation-for="Category" class="validation-error"></span>
            </div>

            @if (Model != null && Model.ID > 0)
            {
                <input asp-for="ID" type="hidden" />
                <button class="btn btn-outline-primary" type="submit">Update</button>
            }
            else
            {
                <button class="btn btn-outline-primary" type="submit">Save</button>
            }

        </form>

    </div>
</body>
</html>

